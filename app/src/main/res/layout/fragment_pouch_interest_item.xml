<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kr.co.easterbunny.wonderple.fragment.PouchInterestItemFragment">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pouch_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"></android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/img_no_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pouchsearch_x"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="148dp"/>

    </FrameLayout>
</layout>