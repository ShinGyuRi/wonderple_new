<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="searchCosmetic"
            type="kr.co.easterbunny.wonderple.adapter.SearchCosmeticAdapter.CosmeticBindingHolder"/>
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/img_cosmetic"/>

        <CheckBox
            android:id="@+id/btn_cosmetic"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:textSize="13.3sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#000000"
            android:letterSpacing="-0.02"
            tools:text="[아리따움] 오일 세럼 CC 크림"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_brand_item_name"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@+id/img_cosmetic"
            android:layout_marginLeft="22dp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/posting_tagbox"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_brand_item_name"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_item_name"
            android:id="@+id/img_item_color" />

        <TextView
            android:id="@+id/tv_color_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="13.3sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#585858"
            android:letterSpacing="-0.02"
            tools:text="1호 라이트 베이지"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@+id/img_item_color"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_item_name" />

    </android.support.constraint.ConstraintLayout>
</layout>