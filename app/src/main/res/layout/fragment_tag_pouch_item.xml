<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="tagPouchItem"
            type="kr.co.easterbunny.wonderple.fragment.TagPouchItemFragment"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        tools:context="kr.co.easterbunny.wonderple.fragment.TagPouchItemFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/itemtag_add_n"
                android:layout_margin="28dp"
                android:onClick="@{tagPouchItem.onClick}"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_tag_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </FrameLayout>
</layout>