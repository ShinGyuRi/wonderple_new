<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:id="@+id/panel_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/between_image"
        android:descendantFocusability="blocksDescendants">

        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/wonder_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_wonder_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wonder_count"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="6dp"
            app:layout_constraintRight_toRightOf="parent" />

        <kr.co.easterbunny.wonderple.view.CustomTextView
            android:id="@+id/tv_wonder_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="@+id/img_wonder_count"
            app:layout_constraintTop_toTopOf="@+id/img_wonder_count"
            android:layout_marginTop="4dp" />

    </android.support.constraint.ConstraintLayout>

</layout>