<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profilePost"
            type="kr.co.easterbunny.wonderple.dialog.ProfilePostDialog"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="@dimen/dlg_follow_report_width"
        android:minHeight="@dimen/dlg_follow_report_height"
        android:orientation="vertical">

        <kr.co.easterbunny.wonderple.view.CustomTextView
            android:id="@+id/btn_post_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="22dp"
            android:text="@string/str_post_delete"
            android:textColor="@color/post_delete"
            android:textSize="16sp"
            app:customFont="Roboto-Medium"
            android:onClick="@{profilePost.onClick}"/>

        <kr.co.easterbunny.wonderple.view.CustomTextView
            android:id="@+id/btn_set_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="22dp"
            android:text="@string/str_set_profile_image"
            android:textColor="@color/btn_tv_color"
            android:textSize="16sp"
            app:customFont="Roboto-Medium"
            android:onClick="@{profilePost.onClick}"/>
    </LinearLayout>
</layout>