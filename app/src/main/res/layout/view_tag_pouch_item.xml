<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp">
        
        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/img_tag_item" />
        
        <ImageView
            android:id="@+id/img_item_color"
            android:layout_width="12dp"
            android:layout_height="12dp"
            tools:layout_editor_absoluteY="58dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/img_tag_item"
            app:layout_constraintLeft_toRightOf="@+id/img_tag_item"
            android:layout_marginLeft="0dp"
            app:layout_constraintTop_toTopOf="@+id/img_tag_item"
            android:layout_marginTop="47dp" />

    </android.support.constraint.ConstraintLayout>
</layout>